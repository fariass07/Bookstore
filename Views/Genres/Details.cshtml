@model Bookstore.Models.Genre

@{
    ViewData["Title"] = Model.Name;
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4 class="lead text-secundary">Detalhes do Gênero</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <hr />
</div class="panel panel-primary">
    <div>
        <h3 class="panel-title h5">Livros</h3>
    </div>
<div class="panel-body">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.Books.FirstOrDefault().Title)</th>
                <th>@Html.DisplayNameFor(Model => Model.Books.FirstOrDefault().Price)</th>
                <th>@Html.DisplayNameFor(Model => Model.Books.FirstOrDefault().Author)</th>
                <th>@Html.DisplayNameFor(Model => Model.Books.FirstOrDefault().ReleaseYear)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Book item in Model.Books)
            {
                <tr>
                    <td>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
                            
                            @Html.DisplayNameFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayNameFor(ModelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayNameFor(ModelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayNameFor(ModelItem => item.ReleaseYear)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

 
 <div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
